#define _CRT_SECURE_NO_WARNINGS//关闭安全警告，以使用scanf函数
#include <stdio.h>
int main()
{
	double i = 0.0;		//初始化数字1
	double j = 0.0;		//初始化数字2
	char n = ' ';		//初始化字符
	printf("请输入第一个数字：");
	
	if (scanf("%lf", &i) != 1) {
		printf("输入了无效数字，请重新输入");//防止输入非数字字符
		return 1;
	}
	
	printf("请输入+,-,*,/运算符号：");
	
	if (scanf(" %c", &n) != 1) {		//注意%c前有一个空格，表示跳过空白字符，防止读取到上一个输入的回车符，
		//没有空格会导致读取失败，从而进入错误处理，如果是scanf_s要加上第三个参数 sizeof(n)

		printf("输入了无效字符请重新输入");
		return 1;
	}
	printf("\n");
	printf("请输入第二个数字：");
	
	if (scanf("%lf", &j) != 1) {
		printf("输入了无效数字，请重新输入");//防止输入非数字字符
		return 1;
	}
	
	switch (n)
	{
	case '+':
		printf("%.2lf + %.2lf = %.2lf",i,j,i + j);
		//加号运算，结果无需重新赋值
		break;
	case '-':
		printf("%.2lf - %.2lf = %.2lf", i, j, i - j);
		//减号运算，结果无需重新赋值
		break;
	case'*':
		printf("%.2lf * %.2lf = %.2lf", i, j, i * j);
		//乘号运算，结果无需重新赋值
		break;
	case'/':
		printf("%.2lf / %.2lf = %.2lf", i, j, i / j);
		//除号运算，结果无需重新赋值
		break;
	default:
		//如果不符合加减乘除运算符号，程序退出
		printf("你写的运算符号不符合，请按照提示去写");
		break;
	}


	return 0;
}
